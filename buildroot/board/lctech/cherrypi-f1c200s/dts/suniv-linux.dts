/dts-v1/;
#include "suniv-f1c100s-linux.dtsi"

/ {
	model = "LCtech CherryPi F1C200s";
	compatible = "lctech,cherrypi-f1c200s", "allwinner,suniv-f1c200s",
		     "allwinner,suniv-f1c100s";

	chosen {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		/* default nand partition layout */
		bootargs = "console=ttyS0,115200 earlycon=uart8250,mmio,0x1c25400 earlyprintk rootwait init=/preinit root=/dev/mtdblock3 rootfstype=squashfs overlayfsdev=/dev/mtdblock4";
		/* my ubi partition layout */
		//bootargs = "console=ttyS0,115200 earlycon=uart8250,mmio,0x1c25400 earlyprintk rootwait init=/preinit root=/dev/ubi0_rootfs rootfstype=ubifs";
	};
};

&spi0 {
	status = "okay";

	spi-nand@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "spi-nand";
		reg = <0>;
		spi-max-frequency = <50000000>;

		/* my nand UBI layout for later */
		/* partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x0 0xf0000>;
				read-only;
			};

			partition@1 {
				label = "u-boot-env";
				reg = <0xf0000 0x10000>;
			};

			partition@2 {
				label = "kernel";
				reg = <0x100000 0x700000>;
			};

			partition@3 {
				label = "ubi";
				reg = <0x800000 0x7800000>;
			};
		}; */

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x0 0xf0000>;
				read-only;
			};

			partition@1 {
				label = "u-boot-env";
				reg = <0xf0000 0x10000>;
			};

			partition@2 {
				label = "kernel";
				reg = <0x100000 0x700000>;
				read-only;
			};

			partition@3 {
				label = "rootfs";
				reg = <0x800000 0x2800000>;
				read-only;
			};

			partition@4 {
				label = "overlay";
				reg = <0x4000000 0x5000000>;
			};
		};
	};
};

&uart1 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart1_pa_pins>;
	status = "okay";
};

&spi1 {
	pinctrl-names = "default";
	pinctrl-0 = <&spi1_pins>;
	status = "okay";
};

&mmc0 {
	status = "okay";
	broken-cd;
};

&otg_sram {
	status = "okay";
};

&usb_otg {
	dr_mode = "peripheral"; /* no vbus detection on this board >:( */
	status = "okay";
};

&usbphy {
	status = "okay";
};

&cedar_ve {
	status = "okay";
};

&ion {
	status = "okay";
};

&de {
	status = "okay";
};

&fe0 {
	status = "okay";
};

&be0 {
	status = "okay";
};

&tve0 {
	status = "okay";
};

&codec {
	allwinner,audio-routing =
		"Headphone", "HP",
		"Headphone", "HPCOM",
		"LINEIN", "Line In",
		"FMINL", "Left FM In",
		"FMINR", "Right FM In",
		"MIC", "Mic";
	status = "okay";
};

&i2c0 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c0_pd_pins>;
	status = "disabled";

	rtp@48 {
		compatible = "ti,tsc2007";
		reg = <0x48>;
		interrupt-parent = <&pio>;
		interrupts = <4 12 IRQ_TYPE_EDGE_FALLING>;
		gpios = <&pio 4 12 GPIO_ACTIVE_LOW>;
		pendown-gpio = <&pio 4 12 GPIO_ACTIVE_LOW>;
		ti,x-plate-ohms = <660>;
		wakeup-source;
	};
};
